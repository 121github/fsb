<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% block title %}{% endblock %} | Fsb Calendar Management System</title>
        
		{% block stylesheets %}{% endblock %}
        {# jquery-mobile css#}
        <link href="{{ asset('bundles/jquery/js/jquery.mobile-1.4.2/jquery.mobile-1.4.2.min.css') }}" rel="stylesheet" type="text/css" />
        
        {# favicon#}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        
        {% block javascripts %}
			{# jquery Lib #}
    		<script type="text/javascript" src="{{ asset('bundles/jquery/js/jquery-1.11.0.min.js') }}" ></script>
    		{# jquery-mobile Lib #}
    		<script type="text/javascript" src="{{ asset('bundles/jquery/js/jquery.mobile-1.4.2/jquery.mobile-1.4.2.min.js') }}" ></script>
		{% endblock %}
		
    </head>
    <body id="{%  block id '' %}">
    	<div data-role="page">			
    		
    		<!-- MENU -->
    		{% if (is_granted('IS_AUTHENTICATED_FULLY') or is_granted('IS_AUTHENTICATED_REMEMBERED')) %}
    			<!-- LEFT PANEL -->
	    		<div data-role="panel" id="right-panel" class="navmenu-panel" data-position="left" data-display="push" data-theme="a">
			
					<ul data-role="listview" class="list" data-theme="a" data-divider-theme="a">
						
						<li data-role="list-divider">MENU</li>
						
{# 						<a href="#" data-rel="close" data-role="button" data-theme="a" data-icon="delete" data-inline="true" data-iconpos="notext"></a>#}
						
						{% if (is_granted('ROLE_SUPER_USER')) %}
			            	<li><a href="#" class="hreflink">{{ "Reporting" }}</a></li>
			            {% elseif (is_granted('ROLE_ADMINISTRATOR')) %}
			            	<li><a href="{{ path('user') }}" class="hreflink">{{ "Users" }}</a></li>
			            	<li><a href="{{ path('rule') }}" class="hreflink">{{ "Rules" }}</a></li>
			            {% endif %}
			            <li><a href="{{ path('calendar_homepage') }}" class="hreflink">{{ "Calendar" }}</a></li>
					</ul>
					
			    </div><!-- /panel -->
			    
			    <!-- RIGHT PANEL -->
			    <div data-role="panel" id="left-panel" class="navmenu-panel" data-position="right" data-display="push" data-theme="a">
			
					<ul data-role="listview" class="list" data-theme="a" data-divider-theme="a">
						
						<li data-role="list-divider">Hi {{ app.security.getToken().getUser().getUserDetail().getFirstname() }}</li>
						
						<li><a href="{{ path('logout') }}" class="hreflink">{{ "Logout" }}</a></li>
					</ul>
					
			    </div><!-- /panel -->
		   	{% endif %}
		    
		    <header data-role="header" class="header" data-theme="a" data-position="fixed" data-tap-toggle="false">
				 {% if (is_granted('IS_AUTHENTICATED_FULLY') or is_granted('IS_AUTHENTICATED_REMEMBERED')) %}
				 	<a href="#right-panel" id="navmenu-btn" class="navmenu-btn">&#9776; </a>
				 	<a href="#left-panel" data-role="button" data-icon="gear" data-iconpos="notext"></a>
				 {% endif %}
				 <h1><a href="{{ path('index') }}"><img alt="fsb" src="{{ asset('bundles/backend/images/logo.png') }}" width="60px;"></a></h1>
			</header><!-- /header -->
    
			{% block body %}{% endblock %}
    		
    		<footer data-role="footer" class="footer" data-position="fixed" data-theme="b" data-tap-toggle="false">
    			&copy; {{ 'now' | date('Y') }} - Fsb
			</footer><!-- /footer -->
			
		</div>	    
    </body>
</html>
    