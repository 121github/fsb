{% extends '::calendar.html.twig' %}


{% block title %}Calendar{% endblock %}

{% block article -%}

	{% set now = "now"|date("U") %}
    {% set nowDay = now|date("d") %}
    {% set nowMonth = now|date("m") %}
    {% set nowYear = now|date("Y") %}
    
    {% set currentDay = day %}
    {% set currentMonth = month %}
    {% set currentYear = year %}
    {% set time = currentMonth ~ "/" ~ currentDay ~ "/" ~ currentYear|date("U") %}
    
    {% set prevDate = time|date_modify("-1 day") %}
    {% set prevDay = prevDate|date("d") %}
    {% set prevMonth = prevDate|date("m") %}
    {% set prevYear = prevDate|date("Y") %}
    
    {% set nextDate = time|date_modify("+1 day") %}
    {% set nextDay = nextDate|date("d") %}
    {% set nextMonth = nextDate|date("m") %}
    {% set nextYear = nextDate|date("Y") %}
    
    
    {% set daysInMonth = time|date('t') %}
	{% set startDow = time|date('F 7\\s\\t Y')|date('w') %}
	
    {% set firstMonthDay = currentMonth ~ "/01/" ~ currentYear %}
    {% set lastMonthDay = currentMonth ~ "/" ~ daysInMonth ~ "/" ~ currentYear %}
    
    
    
    <div  data-theme="a" id="calendar-page" class="day-page">
    
    	
	    <div class="change_day">
	    	<table>
	    		<tr>
			    	<td style="text-align: left;">
			    		{% if (currentDay == nowDay and currentMonth == nowMonth and currentYear == nowYear) %}
			    			<a href="{{ path('calendar_day', {'day': nowDay, 'month': nowMonth, 'year': nowYear}) }}" data-role="button" data-mini="true" data-inline="true" class="ui-btn-active ui-state-persist">{{ "Today" }}</a>
			    		{% else %}
			    			<a href="{{ path('calendar_day', {'day': nowDay, 'month': nowMonth, 'year': nowYear}) }}" data-role="button" data-mini="true" data-inline="true">{{ "Today" }}</a>
			    		{% endif %}
			    	</td>
			    	<td style="text-align: center;">
					    <a href="{{ path('calendar_day', {'day': prevDay, 'month': prevMonth, 'year': prevYear}) }}" data-role="button" data-icon="arrow-l" data-iconpos="notext" data-mini="true" data-inline="true"></a>
					    <span>{{ time|date("d F Y") }}</span>
					    <a href="{{ path('calendar_day', {'day': nextDay, 'month': nextMonth, 'year': nextYear}) }}" data-role="button" data-icon="arrow-r" data-iconpos="notext" data-mini="true" data-inline="true"></a>
					</td>
				    <td style="text-align: right;">
			    		<a href="{{ path('calendar_day', {'day': day , 'month': month, 'year': year}) }}" data-role="button" data-mini="true" data-inline="true" class="ui-btn-active ui-state-persist">{{ "Day" }}</a>
			    		<a href="{{ path('calendar_month', {'month': month, 'year': year}) }}" data-role="button" data-mini="true" data-inline="true">{{ "Month" }}</a>
			    		<a href="{{ path('calendar_diary', {'day': day , 'month': month, 'year': year}) }}" data-role="button" data-mini="true" data-inline="true">{{ "Diary" }}</a>
			    	</td>
			    </tr>
		    </table>
		</div>
        
	    <div role="main" class="ui-content" style="margin: 0 auto; max-width: 92.5em;">
	    	
	    	<ul data-role="listview" data-inset="true">
	        
        		{########## Hours in day ###############}
	        	{% for i in range(8,20) %}
	        			{% if i < 10 %}{% set pref = "0" %}{% else %}{% set pref = "" %}{% endif %}
	        		
						<li data-role="list-divider">
							
							{% if appointment_list[i] is defined %}
							
								<img src="" class="ui-li-thumb">
								<div style="overflow: auto;">
									{% if appointment_list[i][0] is defined %}
										{% for appointment in appointment_list[i][0] %}
											<h2>
	{# 												<a href="{{ path('appointment_show', {'id': appointment["id"]}) }}" data-role="button" data-mini="true" data-inline="true">#}
												<a href="#popup{{ appointment["id"] }}" data-rel="popup" data-position-to="window" data-role="button" data-mini="true" data-inline="true">
								                <p>{{ appointment["hour"] ~ ":" ~ appointment["minute"] }}</p>
												{{ appointment["title"] }}
							                	<p>{{ appointment["comment"]| truncate(30,true) }}</p>
							                </a></h2>
								                
								              <!--  POPUP APPOINTMENT -->
									   		 <div data-role="popup" id="popup{{ appointment["id"] }}" data-overlay-theme="a" data-theme="a" style="max-width:400px;" class="ui-corner-all">
									    		<div data-role="header" data-theme="a" class="ui-corner-top">
											        <h1>Appointment</h1>
											    </div>
											    <div data-role="content" data-theme="d" class="ui-corner-bottom ui-content">
											        <p style="float: right;">{{ time|date("d F Y") }}</p>
												    <h2 class="ui-title">{{ appointment["hour"] ~ ":" ~ appointment["minute"] }}</h2>
												    <p style="border-top: 1px solid gray; padding-top: 10px;"><strong>{{ "Recruiter: " }}</strong>{{ appointment["recruiter"] }}</p>
							                		<p><strong>{{ "Record: " }}</strong>{{ appointment["record"] }}</p>
							                		<p><strong>{{ "Project: " }}</strong>{{ appointment["project"] }}</p>
							                		<p><strong>{{ "Outcome: " }}</strong>{{ appointment["outcome"] }}</p>
							                		<p><strong>{{ "Outcome Reason: " }}</strong>{{ appointment["outcomeReason"] }}</p>
							                		<p style="border-top: 1px solid gray; padding-top: 10px;">{{ appointment["comment"] }}</p>
							                		
							                		<p style="padding-top: 10px; text-align: right;">
												        <a href="{{ path('appointment_edit', {'id': appointment["id"]}) }}" data-role="button" data-inline="true" data-icon="edit" data-theme="a" data-rel="dialog" data-transition="pop">Edit</a>
												        <a href="#" data-role="button" data-inline="true" data-icon="delete" data-theme="a">Delete</a>
												    </p>
											    </div>
									  		  </div>
								        {% endfor %}
							       {% endif %}
								       
							       {% if appointment_list[i][30] is defined %}
							       		{% for appointment in appointment_list[i][30] %}
											<h2>
	{# 											<a href="{{ path('appointment_show', {'id': appointment["id"]}) }}" data-role="button" data-mini="true" data-inline="true">#}
												<a href="#popup{{ appointment["id"] }}" data-rel="popup" data-position-to="window" data-role="button" data-mini="true" data-inline="true">
								        		<p>{{ appointment["hour"] ~ ":" ~ appointment["minute"] }}</p>        
							       				{{ appointment["title"] }}
							                	<p>{{ appointment["comment"] }}</p>
							                </a></h2>
							                
											<!--  POPUP APPOINTMENT -->
										    <div data-role="popup" id="popup{{ appointment["id"] }}" data-overlay-theme="a" data-theme="a" style="max-width:400px;" class="ui-corner-all">
									    		<div data-role="header" data-theme="a" class="ui-corner-top">
											        <h1>{{ appointment["title"] }}</h1>
											    </div>
											    <div data-role="content" data-theme="d" class="ui-corner-bottom ui-content">
												    <p style="float: right;">{{ time|date("d F Y") }}</p>
												    <h2 class="ui-title">{{ appointment["hour"] ~ ":" ~ appointment["minute"] }}</h2>
												    <p style="border-top: 1px solid gray; padding-top: 10px;"><strong>{{ "Recruiter: " }}</strong>{{ appointment["recruiter"] }}</p>
							                		<p><strong>{{ "Record: " }}</strong>{{ appointment["record"] }}</p>
							                		<p><strong>{{ "Project: " }}</strong>{{ appointment["project"] }}</p>
							                		<p><strong>{{ "Outcome: " }}</strong>{{ appointment["outcome"] }}</p>
							                		<p><strong>{{ "Outcome Reason: " }}</strong>{{ appointment["outcomeReason"] }}</p>
							                		<p style="border-top: 1px solid gray; padding-top: 10px;">{{ appointment["comment"] }}</p>
							                		
							                		<p style="padding-top: 10px; text-align: right;">
												        <a href="{{ path('appointment_edit', {'id': appointment["id"]}) }}" data-role="button" data-inline="true" data-icon="edit" data-theme="a" data-rel="dialog" data-transition="pop">Edit</a>
												        <a href="#" data-role="button" data-inline="true" data-icon="delete" data-theme="a">Delete</a>
												    </p>
											    </div>
										    </div>
							           	{% endfor %}
							       {% endif %}
							       
							       <div style="display: inline;">
							       		<a href="{{ path('appointment_new_date', {'hour': i, 'minute': 00, 'day': day, 'month': month, 'year': year}) }}" data-role="button" data-icon="plus" data-iconpos="notext" data-mini="true" data-inline="true" data-rel="dialog" data-transition="pop"></a>
							       </div>
								</div>
					            
			                {% else %}
				                {% for j in range(0,1) %}
				                	<a href="{{ path('appointment_new_date', {'hour': i, 'minute': j*30, 'day': day, 'month': month, 'year': year}) }}" data-role="button" data-rel="dialog" data-transition="pop">
				                		{% if j == 0 %}
				                			<p>{{ pref ~ i ~ ":00" }}</p>
				                		{% else %}
				                			<p>{{ pref ~ i ~ ":30" }}</p>
				                		{% endif %}
				                	</a>
				                {% endfor %}
			                {% endif %}
			                <p class="ui-li-aside">
			                	{{ pref ~ i ~ ":00" }}
			                </p>
			         	</li>
			    	
	            {% endfor %}
	        </ul>
		</div> <!-- content -->
	</div>
	
{% endblock %}
