{% extends '::calendar.html.twig' %}


{% block title %}Calendar{% endblock %}

{% block article -%}

	{% set now = "now"|date("U") %}
    {% set nowDay = now|date("d") %}
    {% set nowMonth = now|date("m") %}
    {% set nowYear = now|date("Y") %}
    
    {% set currentMonth = month %}
    {% set currentYear = year %}
    {% set time = currentMonth ~ "/01/" ~ currentYear|date("U") %}
    
    {% set prevDate = time|date_modify("-1 month") %}
    {% set prevMonth = prevDate|date("m") %}
    {% set prevYear = prevDate|date("Y") %}
    
    {% set nextDate = time|date_modify("+1 month") %}
    {% set nextMonth = nextDate|date("m") %}
    {% set nextYear = nextDate|date("Y") %}
    
    
    {% set daysInMonth = time|date('t') %}
	{% set startDow = time|date('F 7\\s\\t Y')|date('w') %}
	
    {% set firstMonthDay = currentMonth ~ "/01/" ~ currentYear %}
    {% set lastMonthDay = currentMonth ~ "/" ~ daysInMonth ~ "/" ~ currentYear %}
    
    
    
    <div  data-theme="a" id="calendar-page" class="month-page">
    
	    <div class="change_month">
	    	<table>
	    		<tr>
			    	<td style="text-align: left;">
			    		{% if (currentMonth == nowMonth and currentYear == nowYear) %}
			    			<a href="{{ path('calendar_month', {'month': nowMonth, 'year': nowYear}) }}" data-role="button" data-mini="true" data-inline="true" class="ui-btn-active ui-state-persist">{{ "Today" }}</a>
			    		{% else %}
			    			<a href="{{ path('calendar_month', {'month': nowMonth, 'year': nowYear}) }}" data-role="button" data-mini="true" data-inline="true">{{ "Today" }}</a>
			    		{% endif %}
			    	</td>
			    	<td style="text-align: center;">
					    <a href="{{ path('calendar_month', {'month': prevMonth, 'year': prevYear}) }}" data-role="button" data-icon="arrow-l" data-iconpos="notext" data-mini="true" data-inline="true"></a>
					    <span>{{ time|date("F Y") }}</span>
					    <a href="{{ path('calendar_month', {'month': nextMonth, 'year': nextYear}) }}" data-role="button" data-icon="arrow-r" data-iconpos="notext" data-mini="true" data-inline="true"></a>
					</td>
				    <td style="text-align: right;">
			    		<a href="{{ path('calendar_day', {'day': firstMonthDay|date("d"), 'month': month, 'year': year}) }}" data-role="button" data-mini="true" data-inline="true">{{ "Day" }}</a>
			    		<a href="{{ path('calendar_month', {'month': month, 'year': year}) }}" data-role="button" data-mini="true" data-inline="true" class="ui-btn-active ui-state-persist">{{ "Month" }}</a>
			    		<a href="{{ path('calendar_diary', {'day': firstMonthDay|date("d") , 'month': month, 'year': year}) }}" data-role="button" data-mini="true" data-inline="true">{{ "Diary" }}</a>
			    	</td>
			    </tr>
		    </table>
		</div>
        
	    <div role="main" class="ui-content" style="margin: 0 auto; max-width: 92.5em;">
	    	
	    	<table>
	    		<tr>
	    			<td>Mon</td>
	    			<td>Tue</td>
	    			<td>Wed</td>
	    			<td>Thu</td>
	    			<td>Fri</td>
	    			<td>Sat</td>
	    			<td>Sun</td>
	    		</tr>
	    	</table>
	    	
	        <ul data-role="listview" data-inset="true">
	        
	        	{########## Days before month ###############}
	        	{% if startDow != 0 %}
        			{% for daysBefore in range(1,startDow) %}
        				<li class="pastDays" ><a href="#" class="pastDays ui-btn"></a>
        					<img src="" class="ui-li-thumb">
			                <h2></h2>
			                <p></p>
			                <p class="ui-li-aside">
			                	{% set day = firstMonthDay|date_modify('-' ~ (startDow - daysBefore + 1) ~ 'day')|date('d/M') %}
			                	{{ day }}
			                </p>
        				</li>
        			{% endfor %}
        		{% endif %}
        		
        		{########## Days in month ###############}
	        	{% for i in range(1,daysInMonth) %}
					<li>
						{% if i < 10 %}{% set pref = "0" %}{% else %}{% set pref = "" %}{% endif %}
						
						{% set currentDay = currentMonth ~ "/" ~ pref ~ i ~ "/" ~ currentYear|date('U') %}
						
						{% if ((currentDay|date("D") == "Sun") or (currentDay in bankHolidayList)) %}
							<a href="{{ path('calendar_day', {'day': pref ~ i,'month': currentMonth, 'year': currentYear}) }}" class="ui-btn  ui-disabled">
						{% else %}
							<a href="{{ path('calendar_day', {'day': pref ~ i,'month': currentMonth, 'year': currentYear}) }}" class="ui-btn">
						{% endif %}
						
						{% if appointment_list[i] is defined %}
							<img src="" class="ui-li-thumb">
			                <h2>
		                		{{ appointment_list[i] }}
		                	</h2>
		                	<p>Appointmens</p>
		                {% else %}
		                	<h2></h2>
		                {% endif %}
		                <p class="ui-li-aside">
		                	{{ i }}
		                <div class="day">{{ currentDay|date("D") }}</div>
		                </p>
		            </a></li>
	            {% endfor %}
	            
	            {########## Days after month ###############}
	            {% set lastDow = ((startDow + (daysInMonth % 7)) % 7)  %}
	            {% if lastDow != 6 %}
        			{% for daysAfter in range(1,7-lastDow) %}
        				<li class="pastDays" ><a href="#" class="pastDays ui-btn"></a>
        					<img src="" class="ui-li-thumb">
			                <h2></h2>
			                <p></p>
			                <p class="ui-li-aside">
								{% set day = lastMonthDay|date_modify('+' ~ daysAfter ~ 'days')|date('d/M') %}
			                	{{ day }}
			                </p>
        				</li>
        			{% endfor %}
        		{% endif %}
	        </ul>
		</div> <!-- content -->
	</div>
	
{% endblock %}
