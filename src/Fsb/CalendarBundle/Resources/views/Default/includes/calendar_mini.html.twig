<table>
	<thead>
		<tr>
			<th colspan="7" class="center" style="text-align: center;">
			{{ time|date('F Y') }}
			</th>
		</tr>
		<tr>
			<th width="15%">Mon</th>
			<th width="15%">Tue</th>
			<th width="16%">Wed</th>
			<th width="15%">Thu</th>
			<th width="15%">Fri</th>
			<th width="12%">Sat</th>
			<th width="12%">Sun</th>
		</tr>
	</thead>
	<tbody>
		{% set daysInMonth = time|date('t') %}
		{% set startDow = time|date('F 7\\s\\t Y')|date('w') %}
		{% set dow = startDow %}
		<tr>
		{% for day in range(1,daysInMonth) %}
			{% if loop.first and startDow != 0 %}
				<td colspan="{{ startDow }}"></td>
			{% endif %}
			<td style="text-align: center;">
				<div>
					<div>
						<a href="{{ path('index') }}">{{ day }}</a>
					</div>
					<div>
						{# day content here #}
					</div>
				</div>
			</td>
			{% if loop.last and dow != 6 %}
				<td colspan="{{ 6 - dow }}">&nbsp;</td>
			{% endif %}
			{% if dow == 6 %}
				{% set dow = 0 %}
				</tr>
				<tr>
			{% else %}
				{% set dow = dow + 1 %}
			{% endif %}
		{% endfor %}
			</tr>
	</tbody>
</table>